{
    "extends": "../../.eslintrc.json",
    "parserOptions": {
        "project": [
            "tsconfig.lib.json",
            "tsconfig.spec.json"
        ]
    },
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "rules": {
                "@angular-eslint/component-selector": [
                    "error",
                    {
                        "type": "element",
                        "prefix": "mosa",
                        "style": "kebab-case"
                    }
                ],
                "@angular-eslint/directive-selector": [
                    "error",
                    {
                        "type": "attribute",
                        "prefix": "mosa",
                        "style": "camelCase"
                    }
                ]
            }
        }
    ]
}
